---
import { getCollection } from "astro:content"
import Project from "../components/Project.astro"
import Link from "../components/Link.astro"
import BaseLayout from "../layouts/BaseLayout.astro"
import { getProjects } from "../lib/projects"

const projects = await getProjects()

const title = "home";

---

<BaseLayout {title} description = "Person website of Rudsi">
   <h1 slot = "header-content" class = "text-neutral-500" style="font-family: 'Switzer-BoldItalic'";>
      Rudsi
   </h1>


   <main class="codac">
      <p> 
         Hello there, I'm <strong>Rudra Pratap Singh</strong> aka <strong>rudsi</strong>. I'm an
         18 y/o CS undergrad student. I like <strong
           >reading books</strong
         > and <strong>building things</strong>. I enjoy <strong
           >language design</strong
         >, <strong>web development.</strong>  
       </p>

      <div class="mt-12"></div>
      <h2>Projects</h2>

      <div class="grid grid-cols-2 gap-4 md:grid-cols-3">
      {projects.map(project => <Project {project} />)}
      </div>
   </main>
    
 
</BaseLayout>

<style>
   .logo {
     width: 100px; /* Adjust the width as needed */
     height: auto;
     border-radius: 50%; /* Apply a circular border */
     box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Optional: Add a subtle shadow */
   }
 
   .logo-container {
     position: absolute;
     top: 10px; /* Adjust the top position as needed */
     left: 10px; /* Adjust the left position as needed */
   }
 </style>
